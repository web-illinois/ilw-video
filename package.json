{
  "name": "@illinois-toolkit/ilw-video",
  "description": "Illinois Toolkit: A responsive wrapper for embedded videos.",
  "private": false,
  "version": "1.1.2",
  "type": "module",
  "files": [
    "src/**",
    "dist/**",
    "builder/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/ilw-video.js",
      "require": "./dist/ilw-video.cjs",
      "default": "./dist/ilw-video.js",
      "types": [
        "./dist/ilw-video.d.ts"
      ]
    },
    "./ilw-video.css": {
      "import": "./dist/ilw-video.css"
    }
  },
  "main": "./dist/ilw-video.js",
  "module": "./dist/ilw-video.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build --config vite.transpile.config.js --emptyOutDir && vite build --config vite.build.config.js --emptyOutDir",
    "preview": "vite preview",
    "prepack": "npm run build",
    "test": "vitest run --browser.headless",
    "test:axe": "playwright test",
    "test:axe:github": "playwright test --config playwright.ci.config.ts",
    "test:browser": "vitest browser --browser chromium",
    "test-dev": "vite --port 5174"
  },
  "license": "MIT",
  "dependencies": {
    "lit": "3.1.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@illinois-toolkit/ilw-core": "^1.0.2",
    "@playwright/test": "^1.55.1",
    "@vitest/browser": "^3.2.4",
    "axe-html-reporter": "^2.2.11",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest-browser-lit": "^0.1.0"
  }
}